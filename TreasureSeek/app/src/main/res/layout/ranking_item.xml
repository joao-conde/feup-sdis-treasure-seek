<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ranking_number_item"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="56dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ranking_item_name"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="211dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/ranking_number_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ranking_number_of_treasures"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ranking_item_name"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>